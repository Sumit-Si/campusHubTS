PORT= # Port your HTTP server listens on, e.g. 3000
MONGO_URI= # Full MongoDB connection string, e.g. mongodb+srv://user:pass@cluster/dbname

# Token
ACCESS_TOKEN_SECRET= # Strong random string for signing access JWTs, e.g. a 64+ char hex
ACCESS_TOKEN_EXPIRY= # Access token lifetime, e.g. 15m or 1h etc.
REFRESH_TOKEN_SECRET= # Strong random string for signing refresh JWTs, keep different from access secret
REFRESH_TOKEN_EXPIRY= # Refresh token lifetime, e.g. 7d or 30d etc.

# Cookies
ACCESS_TOKEN_MAX_AGE= # Access cookie max-age in ms, e.g. 900000 for 15 minutes
REFRESH_TOKEN_MAX_AGE= # Refresh cookie max-age in ms, e.g. 604800000 for 7 days

# Cloudinary
CLOUDINARY_CLOUD_NAME= # Your Cloudinary cloud name from dashboard, e.g. demo
CLOUDINARY_API_KEY= # Cloudinary API key
CLOUDINARY_API_SECRET= # Cloudinary API secret, treat like a password

# Node environment
NODE_ENV=development # Runtime environment: development, production, or test

# Winston
LOG_LEVEL=info # Minimum log level: error, warn, info, http, verbose, debug, silly
